{% extends 'layout.twig' %}
{% block content %}

	{% for blogPost in blogPosts %}
		<div class="blog-post">
			<h2>{{ blogPost.title|raw }}</h2>
			<p>April 19, 2019 by <a href="">Francisco</a></p>
			{% if blogPost.img_url %}
				<div class="blog-post-image">
					<img src="{{ blogPost.img_url }}" alt="">
				</div>
			{% endif %}
			<div class="blog-post-content">
				{{ blogPost.content|raw }}
			</div>
		</div>
	{% endfor %}

{% endblock %}