{% extends 'layout.twig' %}

{% block content %}
	<h2>Users</h2>
	<p>
		<a class="btn btn-success" href="{{ 'admin/users/create' | url }}">New User</a>
	</p>

	<table class="table">
		<tr>
			<th>Name</th>
			<th>Email</th>
			<th>Edit</th>
			<th>Delete</th>
		</tr>

		{% for user in users %}
			<tr>
				<td>{{ user.name|raw }}</td>
				<td>{{ user.email|raw }}</td>
				<td>Edit</td>
				<td>Delete</td>
			</tr>
		{% endfor %}

	</table>
{% endblock %}